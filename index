    <script>
        const equipos = [
            { nombre: "Real Madrid", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/5/56/Real_Madrid_CF.svg/1200px-Real_Madrid_CF.svg.png" },
            { nombre: "FC Barcelona", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/4/47/FC_Barcelona_%28crest%29.svg/1200px-FC_Barcelona_%28crest%29.svg.png" },
            { nombre: "Atl√©tico de Madrid", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/f/f4/Atletico_Madrid_2017_logo.svg/1200px-Atletico_Madrid_2017_logo.svg.png" },
            { nombre: "Sevilla FC", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/3/3b/Sevilla_FC_logo.svg/1200px-Sevilla_FC_logo.svg.png" },
            { nombre: "Manchester United", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/7/7a/Manchester_United_FC_crest.svg/1200px-Manchester_United_FC_crest.svg.png" },
            { nombre: "Liverpool", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/0/0c/Liverpool_FC.svg/1200px-Liverpool_FC.svg.png" },
            { nombre: "Chelsea", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/c/cc/Chelsea_FC.svg/1200px-Chelsea_FC.svg.png" },
            { nombre: "Bayern Munich", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/1/1b/FC_Bayern_M%C3%BCnchen_logo_%282017%29.svg/1200px-FC_Bayern_M%C3%BCnchen_logo_%282017%29.svg.png" },
            { nombre: "Borussia Dortmund", imagen: "https://upload.wikimedia.org/wikipedia/commons/thumb/6/67/Borussia_Dortmund_logo.svg/1200px-Borussia_Dortmund_logo.svg.png" },
            { nombre: "Arsenal FC", imagen: "https://upload.wikimedia.org/wikipedia/en/thumb/5/53/Arsenal_FC.svg/1200px-Arsenal_FC.svg.png" }
        ];

        function mostrarEquipo() {
            const equipoAleatorio = equipos[Math.floor(Math.random() * equipos.length)];
            const imagen = document.getElementById("equipo-imagen");
            imagen.src = equipoAleatorio.imagen;
            imagen.alt = equipoAleatorio.nombre;
            imagen.style.display = "block";
        }
    </script>
